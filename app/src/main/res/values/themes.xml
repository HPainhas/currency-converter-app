<resources>
    <!-- Base application theme. -->
    <style name="Theme.CurrencyConverter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/currency_converter_light_500</item>
        <item name="colorOnPrimary">@color/currency_converter_light_100</item>
        <item name="colorPrimaryContainer">@color/currency_converter_light_800</item>
        <item name="colorOnPrimaryContainer">@color/currency_converter_light_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/currency_converter_light_A400</item>
        <item name="colorOnSecondary">@color/currency_converter_light_A200</item>
        <item name="colorSecondaryContainer">@color/currency_converter_light_A700</item>
        <item name="colorOnSecondaryContainer">@color/currency_converter_light_A100</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/currency_converter_light_400</item>
        <item name="colorOnTertiary">@color/currency_converter_light_200</item>
        <item name="colorTertiaryContainer">@color/currency_converter_light_700</item>
        <item name="colorOnTertiaryContainer">@color/currency_converter_light_300</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/currency_converter_light_500</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CurrencyConverter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CurrencyConverter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CurrencyConverter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>