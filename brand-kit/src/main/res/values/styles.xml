<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CurrencyConverterPrimaryButtonStyle">
        <item name="android:textColor">@color/currency_converter_primary_button_text_color</item>
        <item name="background">@drawable/currency_converter_primary_button_background</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CurrencyConverterSecondaryButtonStyle">
        <item name="android:textColor">@color/currency_converter_secondary_button_text_color</item>
        <item name="background">@drawable/currency_converter_secondary_button_background</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CurrencyConverterPrimaryTextStyle">
        <item name="android:textSize">@dimen/currency_converter_primary_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CurrencyConverterSecondaryTextStyle">
        <item name="android:textSize">@dimen/currency_converter_secondary_text_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>