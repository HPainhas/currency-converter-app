<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/currency_selection_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--  Make this a dynamic recyclerView where multiple
     currencies can be converted at the same time-->

    <Spinner
        android:id="@+id/currency_selection_spinner_first_choice"
        style="@style/CurrencySelectionSpinnerNoDropdownIconStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dropDownSelector="@drawable/ic_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/currency_selection_item" />

    <Spinner
        android:id="@+id/currency_selection_spinner_second_choice"
        style="@style/CurrencySelectionSpinnerNoDropdownIconStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:dropDownSelector="@drawable/ic_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="@id/currency_selection_spinner_first_choice"
        app:layout_constraintStart_toStartOf="@id/currency_selection_spinner_first_choice"
        app:layout_constraintTop_toBottomOf="@id/currency_selection_spinner_first_choice"
        tools:listitem="@layout/currency_selection_item" />

</androidx.constraintlayout.widget.ConstraintLayout>