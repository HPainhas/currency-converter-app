<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CurrencySelectionSpinnerNoDropdownIconStyle">
        <item name="android:background">@drawable/currency_selection_spinner_background</item>
        <item name="android:popupBackground">@color/currency_converter_light_A100</item>
        <item name="android:dropDownSelector">@null</item>
    </style>

    <style name="CurrencySelectionSpinnerItemSymbolTextStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/currency_selection_item_currency_symbol_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CurrencySelectionSpinnerItemAmountTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/currency_selection_item_amount_text_size</item>
    </style>

    <style name="CurrencySelectionSpinnerItemExchangeRateTextStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/currency_selection_item_exchange_rate_text_size</item>
    </style>

</resources>